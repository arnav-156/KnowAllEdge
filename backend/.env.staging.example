# =============================================================================
# Staging Environment Variables
# DO NOT commit actual values - use secrets management
# =============================================================================

# Environment
FLASK_ENV=staging
FLASK_DEBUG=0

# Flask (REQUIRED - generate with: openssl rand -base64 32)
SECRET_KEY=

# Database (REQUIRED)
DATABASE_URL=postgresql://user:password@staging-db.example.com:5432/intuitscape_staging

# Redis (REQUIRED)
REDIS_ENABLED=true
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Keys (REQUIRED)
GOOGLE_API_KEY=

# JWT (REQUIRED - generate with: openssl rand -base64 64)
JWT_SECRET_KEY=

# CORS
CORS_ORIGINS=https://staging.intuitscape.com,https://staging-app.intuitscape.com

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=INFO

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging

# Features
FEATURES_GAMIFICATION=true
FEATURES_ANALYTICS=true
FEATURES_STUDY_TOOLS=true
FEATURES_LEARNING_ANALYTICS=true
FEATURES_INTEGRATIONS=true
FEATURES_SOCIAL_FEATURES=true

# Backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
