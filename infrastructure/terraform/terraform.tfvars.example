# =============================================================================
# Terraform Variables - Example
# Copy to terraform.tfvars and fill in actual values
# =============================================================================

# AWS Configuration
aws_region  = "us-east-1"
environment = "production"

# VPC Configuration
vpc_cidr        = "10.0.0.0/16"
public_subnets  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnets = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# Database Configuration
db_instance_class    = "db.t3.medium"
db_allocated_storage = 100
db_name             = "intuitscape"
db_username         = "intuitscape_admin"
db_backup_retention = 30
db_multi_az         = true

# Redis Configuration
redis_node_type  = "cache.t3.medium"
redis_num_nodes  = 2

# ECS Configuration
backend_image   = "ghcr.io/your-org/intuitscape/backend:latest"
backend_cpu     = 1024
backend_memory  = 2048
backend_count   = 3

frontend_image  = "ghcr.io/your-org/intuitscape/frontend:latest"
frontend_cpu    = 512
frontend_memory = 1024
frontend_count  = 2

# Auto Scaling
autoscaling_min        = 2
autoscaling_max        = 10
autoscaling_target_cpu = 70

# SSL Certificate
ssl_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012"

# Monitoring
alert_email = "alerts@intuitscape.com"

# Additional Tags
tags = {
  Team        = "Platform"
  CostCenter  = "Engineering"
  Compliance  = "GDPR"
}
